pipeline{
    agent {
        kubernetes {
            cloud "kubernetes"
            yaml """
apiVersion: v1
kind: Pod
metadata:
  namespace: devops
spec:
  imagePullSecrets:
    - name: aliyun-image
  containers:
    # node
    - name: jnlp
      image: registry.cn-hangzhou.aliyuncs.com/zenghongtao/inbound-agent:4.3-4
      imagePullPolicy: Always
      command:
        - cat
      tty: true
      workingDir: /home/jenkins/agent
"""
        }
    }
    stages {
        stage("Build") {
            steps {
                container("jnlp") {
                    script {
                        sh """
                            echo hi
                            sleep 30s
                        """
                    }
                }
            }
        }
    }
}
