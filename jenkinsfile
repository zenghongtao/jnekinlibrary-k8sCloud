pipeline{
    agent {
        kubernetes {
            cloud "kubernetes"
            yaml """
apiVersion: v1
kind: Pod
metadata:
  namespace: devops
spec:
  securityContext:
    runAsUser: 1000
    runAsGroup: 1000
    fsGroup: 1000 
  containers:
    # node
    - name: jnlp-agent-node
      image: docker.io/jenkins/inbound-agent:4.3-4
      imagePullPolicy: Always
      command:
        - cat
      tty: true
      workingDir: /home/jenkins/agent
"""
        }
    }
    stages {
        stage("Build") {
            steps {
                container("jnlp-agent-node") {
                    script {
                        sh """
                            echo hi
                            sleep 30s
                        """
                    }
                }
            }
        }
    }
}
